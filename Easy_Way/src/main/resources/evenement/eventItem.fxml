            <Insets left="35.0" />
        </HBox.margin>
        <children>
            <Button fx:id="viewButton" mnemonicParsing="false" style="-fx-background-color: #349eeb;" text="View" textFill="WHITE">
                <font>
                    <Font name="Corbel Bold" size="16.0" />
                </font>
            </Button>
            <Button fx:id="editButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" style="-fx-background-color: #d5e310;" text="Edit" textFill="WHITE">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
            <Button fx:id="deleteButton" layoutX="62.0" layoutY="10.0" mnemonicParsing="false" style="-fx-background-color: #8a0001;" text="Delete" textFill="WHITE">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </children>
    </HBox>
</children>
</HBox>
